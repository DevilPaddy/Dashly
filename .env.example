# =============================================================================
# DASHLY - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string
# Get this from MongoDB Atlas or your local MongoDB instance
# Format: mongodb+srv://username:password@cluster.mongodb.net/database_name
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/dashly?retryWrites=true&w=majority

# =============================================================================
# NEXTAUTH.JS CONFIGURATION
# =============================================================================
# NextAuth secret key - generate a random string for production
# You can generate one at: https://generate-secret.vercel.app/32
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# NextAuth URL - your application's base URL
# For development: http://localhost:3000
# For production: https://yourdomain.com
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
# Google OAuth credentials from Google Cloud Console
# 1. Go to https://console.cloud.google.com/
# 2. Create a new project or select existing one
# 3. Enable Google+ API and Gmail API
# 4. Go to Credentials > Create Credentials > OAuth 2.0 Client IDs
# 5. Set authorized redirect URIs to: http://localhost:3000/api/auth/callback/google

# Google OAuth Client ID
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# Google OAuth Client Secret
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# GOOGLE APIS CONFIGURATION (Optional - for enhanced features)
# =============================================================================
# Google API Key for additional Google services
# Get from Google Cloud Console > Credentials > API Keys
GOOGLE_API_KEY=your_google_api_key

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment (development, staging, production)
NODE_ENV=development

# API Base URL (optional - defaults to /api)
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# =============================================================================
# ENCRYPTION CONFIGURATION
# =============================================================================
# Encryption key for sensitive data (OAuth tokens, etc.)
# Generate a 32-character random string
ENCRYPTION_KEY=your_32_character_encryption_key_here

# =============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# =============================================================================
# SMTP configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# =============================================================================
# LOGGING & MONITORING (Optional)
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable/disable request logging
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# RATE LIMITING (Optional)
# =============================================================================
# API rate limiting configuration
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
# Enable/disable specific features
ENABLE_EMAIL_SYNC=true
ENABLE_CALENDAR_SYNC=true
ENABLE_AI_FEATURES=false

# =============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# =============================================================================
# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Error tracking (Sentry)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Database debugging
DEBUG_DB=false

# Skip authentication in development (NOT for production)
SKIP_AUTH=false